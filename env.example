# Environment Variables for Weather Proxy
# Copy this file to .env and customize for your environment
# Usage: docker-compose --env-file .env up

# ============================================
# Redis Configuration
# ============================================

# Redis host (leave empty for embedded Redis in Docker)
# REDIS_HOST=redis
# REDIS_HOST=localhost
# REDIS_HOST=redis.example.com

# Redis port
REDIS_PORT=6379

# Redis database number
REDIS_DB=0

# Redis password (for external Redis with auth)
# REDIS_PASSWORD=your-secure-password

# ============================================
# Application Configuration
# ============================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=weather-proxy.log

# ============================================
# Docker Compose Configuration
# ============================================

# Compose project name (prefix for containers, networks, volumes)
COMPOSE_PROJECT_NAME=weather-proxy

# Which compose file to use by default
# COMPOSE_FILE=docker-compose.yml
# COMPOSE_FILE=docker-compose.external-redis.yml
# COMPOSE_FILE=docker-compose.dev.yml
# COMPOSE_FILE=docker-compose.prod.yml

# ============================================
# Production Settings (for docker-compose.prod.yml)
# ============================================

# Redis password for production
# REDIS_PASSWORD=strong-password-here

# Application replicas
# COMPOSE_REPLICAS=2
